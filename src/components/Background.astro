---
import { Image } from 'astro:assets';
import {
  flowers,
  deer,
  sunset,
  bird,
  mountains,
  rocks,
} from '@/assets/backgrounds';
---

<style>
  .background {
    z-index: 0;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    animation: fade 42s infinite;
    opacity: 0;
    content-visibility: auto;
  }

  .background:nth-child(1) {
    animation-delay: 0s;
  }
  .background:nth-child(2) {
    animation-delay: 7s;
  }
  .background:nth-child(3) {
    animation-delay: 14s;
  }
  .background:nth-child(4) {
    animation-delay: 21s;
  }
  .background:nth-child(5) {
    animation-delay: 28s;
  }
  .background:nth-child(6) {
    animation-delay: 35s;
  }

  @keyframes fade {
    0% {
      opacity: 0;
    }
    4.76% {
      opacity: 1;
    }
    19.04% {
      opacity: 1;
    }
    23.8% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }
</style>

<>
  <Image src={flowers} alt="purple flowers" class="background" />
  <Image src={deer} alt="a deer head on" class="background" />
  <Image src={sunset} alt="a low sunset over the ocean" class="background" />
  <Image src={bird} alt="a green maccaw" class="background" />
  <Image
    src={mountains}
    alt="mountains beyond an open plain with a few sparse trees"
    class="background"
  />
  <Image src={rocks} alt="ice or salt covered rocks" class="background" />
</>
