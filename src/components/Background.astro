---
import { Image } from 'astro:assets';
import {
  flowers,
  deer,
  sunset,
  bird,
  mountains,
  rocks,
} from '@/assets/backgrounds';

const backgrounds = [
  {
    src: flowers,
    alt: 'a large bush covered in purple flowers',
  },
  {
    src: deer,
    alt: 'a close up photo of a deer',
  },
  {
    src: sunset,
    alt: 'a low sunset over the ocean',
  },
  {
    src: bird,
    alt: 'a green macaw cleaning itself',
  },
  {
    src: mountains,
    alt: 'a large mountain range beyond a sparse plain',
  },
  {
    src: rocks,
    alt: 'mineral or ice covered rocks',
  },
];

backgrounds.sort(() => Math.random() - 0.5);
---

<>
  {
    backgrounds.map((background) => (
      <Image
        src={background.src}
        alt={background.alt}
        class="background"
        loading="eager"
      />
    ))
  }
</>

<style>
  .background {
    z-index: 0;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    animation: fade 42s infinite;
    opacity: 0;
    content-visibility: auto;
  }

  .background:nth-child(1) {
    animation-delay: 0s;
  }
  .background:nth-child(2) {
    animation-delay: 7s;
  }
  .background:nth-child(3) {
    animation-delay: 14s;
  }
  .background:nth-child(4) {
    animation-delay: 21s;
  }
  .background:nth-child(5) {
    animation-delay: 28s;
  }
  .background:nth-child(6) {
    animation-delay: 35s;
  }

  @keyframes fade {
    0% {
      opacity: 0;
    }
    4.76% {
      opacity: 1;
    }
    19.04% {
      opacity: 1;
    }
    23.8% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }
</style>
